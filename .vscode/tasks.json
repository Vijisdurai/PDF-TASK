{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend",
            "type": "process",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                ".\\venv\\Scripts\\Activate.ps1; uvicorn main:app --reload"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Frontend",
            "type": "process",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": []
        },
        {
            "label": "Run All",
            "dependsOn": [
                "Run Backend",
                "Run Frontend"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}